generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  email  String
  role   Role    @default(USER)
  movies Movie[]
}

model Movie {
  id     Int    @id @default(autoincrement())
  name   String
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

enum Role {
  USER
  ADMIN
}
