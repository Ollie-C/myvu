generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String?   @unique
  role     Role      @default(USER)
  myMovies MyMovie[]
}

enum Role {
  USER
  ADMIN
}

model MyMovie {
  id     Int     @id @default(autoincrement())
  title  String
  score  Float?
  image  String?
  date   String?
  tmdbID Int?
  users  User[]
}
